# ============================================================================
# OpenAI API Configuration
# ============================================================================
# Required for LLM-based response generation
OPENAI_API_KEY=your-openai-api-key-here

# Other LLM parameters
LLM_MODEL = "gpt-3.5-turbo"
LLM_MAX_TOKENS = 800
LLM_TEMPERATURE = 0.2

# ============================================================================
# Model Paths
# ============================================================================
# Path to the team classifier model directory
TEAM_CLASSIFIER_PATH=models/perfect_team_classifier

# Path to the ticket classifier model directory
TICKET_CLASSIFIER_PATH=models/ticket_classifier_model

# ============================================================================
# Knowledge Base Configuration
# ============================================================================
# Path to the CSV knowledge base file
KNOWLEDGE_BASE_PATH=data/User_Request_last_team_ANON.csv

# ============================================================================
# Embedding Configuration
# ============================================================================
# Sentence transformer model name (from HuggingFace)
SENTENCE_MODEL=all-MiniLM-L6-v2

# Directory where embedding cache files are stored
EMBEDDING_CACHE_DIR=embeddings_cache

# ============================================================================
# Retrieval Parameters
# ============================================================================
# Default number of similar replies to retrieve (top-k)
DEFAULT_TOP_K=5

# ============================================================================
# Cache Control (Optional)
# ============================================================================
# Set to "1" to disable embedding cache (forces rebuild)
# Leave unset or set to "0" to use cache
DISABLE_EMBEDDING_CACHE=0

# ============================================================================
# Device Configuration (Optional)
# ============================================================================
# Auto-detected if not set
# DEVICE=cuda #or cpu
